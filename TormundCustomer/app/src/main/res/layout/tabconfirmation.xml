<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/tab5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimario"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
        <!-- LINEAR LAYOUT SCROLL !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- LINEAR LAYOUT SCROLL !-->

            <LinearLayout
                android:id="@+id/transparentShape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/buttontransparent"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="75px"
                    android:textColor="#000"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cuadroconfirmacion"
                android:layout_width="395dp"
                android:layout_height="155dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CheckTabServiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/colorFont"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/CheckTabDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="50dp"
                    android:text="Fecha:"
                    android:textColor="@color/colorFont"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/CheckTabDateInitHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="75dp"
                    android:text="Comienza a las:"
                    android:textColor="@color/colorFont"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/CheckTabDateFInishedHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="95dp"
                    android:text="Termina a las:"
                    android:textColor="@color/colorFont"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/CheckTabBarber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="115dp"
                    android:text="Barbero:"
                    android:textColor="@color/colorFont"
                    android:textSize="15dp" />


            </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="TOTAL:"
        android:textColor="@color/colorFont"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/CheckTabTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="205dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="00.00"
        android:textColor="@color/colorFont"
        android:textSize="35dp" />
</RelativeLayout>
        <Button
            android:layout_margin="30dp"
                android:onClick="onClickBtnConfirmationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:background="@color/colorSecundario"
            android:fontFamily="@font/fira_mono"
            android:textColor="@color/colorFont"
            android:textSize="20dp"
            />







    </LinearLayout>


    </ScrollView>
    </LinearLayout>

