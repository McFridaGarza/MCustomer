<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
android:background="@color/colorPrimario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/branchName"
            android:layout_width="420dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:background="@color/cardview_dark_background"
            android:fontFamily="@font/allerta"
            android:gravity="center"
            android:text="Centrito Valle"
            android:textColor="@color/colorSecundario"
            android:textSize="35dp"
            android:textStyle="bold"
            tools:elevation="6dp">


        </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px">
    <ImageView
        android:id="@+id/imageMaps"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_location_on_24px"
       android:backgroundTint="@color/colorFont"
        android:layout_marginLeft="10dp"
       />

    <TextView
        android:id="@+id/branchAddress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="Rio Colorado 240,66220 San Pedro Garza Garcia"
        android:textColor="@color/colorFont"
        android:textSize="39px" />

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagePhone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_phone_24px"
        android:backgroundTint="@color/colorFont"
        android:layout_marginLeft="10dp"
      />

    <TextView
        android:id="@+id/branchPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="83575895"
        android:textColor="@color/colorFont"
        android:textSize="39px" />

    <ImageView
        android:id="@+id/imageHorary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_access_time_24px"
        android:backgroundTint="@color/colorFont"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        />

    <TextView
        android:id="@+id/branchHorary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="999999999"
        android:textColor="@color/colorFont"
        android:textSize="39px" />




</LinearLayout>




    </LinearLayout>


</LinearLayout>