<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:paddingTop="10dip" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparenteOscuro"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
       >


            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                app:srcCompat="@drawable/logo" />


        <Button
            android:id="@+id/ButtonDates"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="120dp"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/ic_baseline_event_24px"
            android:drawableTint="#ffffff"
            android:elevation="16dp"
            android:backgroundTint="@color/colorSecundario"
            android:onClick="onClickBtn"
            android:paddingLeft="50dp"
            android:text="Agendar Cita             "
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:fontFamily="@font/work_sans_semibold" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/fake_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@layout/facebook_button_round"
            android:elevation="16dp"
            android:onClick="onClickFakeButton"
            android:text="Continua con Facebook"

            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:fontFamily="@font/work_sans_semibold" />


        <!--<Button
            android:id="@+id/buttonLogIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"

            android:fontFamily="@font/work_sans_semibold"
            android:onClick="onClickBtn"
            android:text="Iniciar SesiÃ³n"
            android:textColor="@color/colorOrange" /-->


    </LinearLayout>




</android.support.constraint.ConstraintLayout>