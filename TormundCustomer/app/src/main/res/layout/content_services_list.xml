<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.Common.ServicesListActivity"
    tools:showIn="@layout/activity_services_list"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- Header Menu -->
        <LinearLayout
            android:id="@+id/headerServicesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:background="@color/colorPrimario">
            <ImageView
                android:id='@+id/ProfileView'
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="105dp"
                android:src="@drawable/hellrazor_extendido"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="4dp"
                android:paddingLeft="50dp"
                android:paddingBottom="10dp"
                android:background="@color/colorPrimario"
                android:orientation="vertical">
            </LinearLayout>


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerServicesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars = "vertical"

            />
    </LinearLayout>


</LinearLayout>